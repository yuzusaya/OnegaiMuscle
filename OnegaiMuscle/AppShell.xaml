<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OnegaiMuscle.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:OnegaiMuscle"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        ContentTemplate="{DataTemplate local:VerificationPage}"
        Route="VerificationPage" />
    <ShellContent
        ContentTemplate="{DataTemplate local:ProfilePage}"
        Route="ProfilePage" />
    <ShellContent
        ContentTemplate="{DataTemplate local:CreateProfilePage}"
        Route="CreateProfilePage" />

</Shell>
